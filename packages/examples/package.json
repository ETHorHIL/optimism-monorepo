{
  "name": "@eth-optimism/examples",
  "version": "0.0.1-alpha.1",
  "description": "Example of using solc-transpiler & Web3 full node in place of solc-js and other Web3 providers",
  "scripts": {
    "clean": "rimraf build",
    "build:truffle": "export EXECUTION_MANAGER_ADDRESS=\"0xA193E42526F1FEA8C99AF609dcEabf30C1c29fAA\" && truffle compile",
    "build:waffle": "mkdir -p build/waffle && waffle waffle-config.json",
    "build": "yarn build:waffle && yarn build:truffle",
    "all": "yarn clean && yarn build"
  },
  "keywords": [
    "optimism",
    "rollup",
    "optimistic",
    "ethereum",
    "client"
  ],
